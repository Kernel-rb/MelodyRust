{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "MelodyRust",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "app": {
        "all": true,
        "hide": true,
        "show": true
      },
      "notification": {
        "all": true
      },
      "http": {
        "all": true,
        "request": true,
        "scope": []
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.kernel.desktop.music-player",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "center": true,
        "visible": true,
        "titleBarStyle": "Overlay",
        "title": "MelodyRust ðŸŽ¶",
        "width": 800,
        "height": 600
      }
    ]
  }
}
